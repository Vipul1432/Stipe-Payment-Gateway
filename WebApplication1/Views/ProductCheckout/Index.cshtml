@model List<Product>

    <br />
    <table class="table table-responsive table-light table-bordered" style="width:100%">
        <tr>
            <th>Product Name</th>
            <th>Rate</th>
            <th>Quantity</th>
            <th>Product Image></th>
            <th>Total</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Rate</td>
                <td>@item.Quantity</td>
                <td><img src="@item.ImagePath" style="width:130px;height150px;"/></td>
                <td>@(item.Rate* item.Quantity)</td>
            </tr>
        }
</table>
<br />
<a asp-action="Checkout" asp-controller="ProductCheckout" class="btn btn-sm btn-primary">Checkout</a>